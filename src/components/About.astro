---
const profileImage = "/me-long.png";

const languages = [
  "Java",
  "C#",
  "TypeScript",
  "JavaScript",
  "Python",
  "HTML/CSS"
];

const frameworks = [
  ".NET",
  "Spring Boot",
  "Next.js",
  "React",
  "Astro",
  "Tailwind CSS",
  "FastAPI"
];

const tools = [
  "Git",
  "SQL",
  "Docker",
  "PostgreSQL",
  "ComfyUI",
  "Blender API"
];
---

<section class="py-24 px-4" id="about">
  <div class="max-w-6xl mx-auto">
    
    <div class="mb-16 border-b border-emerald-500/40 pb-12">
      <h2 class="text-5xl md:text-7xl font-bold text-white tracking-tight leading-none">
        Jornick Verhoeven
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20">
      
      <div class="lg:col-span-5 space-y-8">
        <div class="relative group rounded-2xl overflow-hidden shadow-2xl border border-gray-800 aspect-[4/5]">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent z-10"></div>
          <img 
            src={profileImage} 
            alt="Jornick Verhoeven" 
            class="w-full h-full object-cover object-center grayscale group-hover:grayscale-0 transition-all duration-500"
          />
          <div class="absolute bottom-4 left-4 z-20">
            <span class="text-emerald-400 font-bold text-sm tracking-widest">Full Stack Developer</span>
          </div>
        </div>

        <div class="flex flex-wrap gap-4">
            <a href="https://github.com/JornickVn" target="_blank" class="flex-1 flex items-center justify-center gap-3 text-white hover:text-emerald-400 px-6 py-3 rounded-lg border border-gray-800 bg-gray-900/50 hover:border-emerald-500/50 transition-all group">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              <span class="font-bold text-sm">GitHub</span>
            </a>
            <a href="https://linkedin.com/in/jornick-verhoeven" target="_blank" class="flex-1 flex items-center justify-center gap-3 text-white hover:text-emerald-400 px-6 py-3 rounded-lg border border-gray-800 bg-gray-900/50 hover:border-emerald-500/50 transition-all group">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
              <span class="font-bold text-sm">LinkedIn</span>
            </a>
        </div>
      </div>

      <div class="lg:col-span-7 flex flex-col justify-center space-y-12">
        
        <div class="space-y-6">
            <p class="text-xl md:text-2xl text-white font-bold">
              I'm a software engineer focused on building reliable solutions with .NET and Java.
            </p>
            <div class="text-gray-300 text-lg leading-relaxed font-medium space-y-6">
                <p>
                  With a Bachelor's in Computer Science, I specialize in creating scalable backend systems while maintaining a strong interest in modern full-stack development. I am passionate about learning new frameworks and technologies and seeing what's possible with them.
                </p>
                <p>
                  When I'm not at my desk, I'm usually out skateboarding, hitting the gym, or just gaming (which is at my desk again).
                </p>
            </div>
        </div>

        <div class="space-y-8 pt-8 border-t border-gray-800">
          <div>
            <span class="block text-emerald-500 font-bold tracking-wider text-xs mb-4">Languages</span>
            <div class="flex flex-wrap gap-2">
              {languages.map((skill) => (
                <span class="text-gray-300 bg-gray-900/80 px-3 py-1.5 rounded border border-gray-800 text-sm font-medium hover:border-emerald-500/30 cursor-default transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div>
            <span class="block text-emerald-500 font-bold tracking-wider text-xs mb-4">Frameworks</span>
            <div class="flex flex-wrap gap-2">
              {frameworks.map((skill) => (
                <span class="text-gray-300 bg-gray-900/80 px-3 py-1.5 rounded border border-gray-800 text-sm font-medium hover:border-emerald-500/30 cursor-default transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div>
            <span class="block text-emerald-500 font-bold tracking-wider text-xs mb-4">Tools & Databases</span>
            <div class="flex flex-wrap gap-2">
              {tools.map((skill) => (
                <span class="text-gray-300 bg-gray-900/80 px-3 py-1.5 rounded border border-gray-800 text-sm font-medium hover:border-emerald-500/30 cursor-default transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>