---
export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    repo?: string;
    tech?: string[];
    date?: string;
    [key: string]: any;
  };
}

const { frontmatter } = Astro.props;
---

<section class="py-20 px-4 min-h-screen">
  <div class="max-w-6xl mx-auto">
    
    <div class="mb-8">
      <a href="/portfolio" class="inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300 transition-colors">
        <span>&larr; Back to Portfolio</span>
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <aside class="lg:col-span-1">
        <div class="lg:sticky lg:top-24 bg-gray-900/40 border border-gray-700/50 rounded-xl p-6 backdrop-blur-sm">
          
          <h1 class="text-3xl font-bold text-emerald-400 mb-4 leading-tight">
            {frontmatter.title}
          </h1>
          
          {frontmatter.description && (
            <p class="text-gray-300 mb-6 text-sm leading-relaxed">
              {frontmatter.description}
            </p>
          )}

          <div class="space-y-6">
            {frontmatter.tech && (
              <div>
                <h3 class="text-emerald-500 text-xs font-bold uppercase tracking-wider mb-3">Technologies</h3>
                <div class="flex flex-wrap gap-2">
                  {frontmatter.tech.map((t) => (
                    <span class="px-2 py-1 bg-emerald-900/30 border border-emerald-500/20 rounded text-xs text-emerald-200">
                      {t}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {frontmatter.repo && (
              <div>
                 <h3 class="text-emerald-500 text-xs font-bold uppercase tracking-wider mb-3">Links</h3>
                <a 
                  href={frontmatter.repo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-white hover:text-emerald-400 transition-colors text-sm break-all"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                  View Repository
                </a>
              </div>
            )}
          </div>
        </div>
      </aside>

      <main class="lg:col-span-2">
        <article class="prose prose-invert prose-emerald max-w-none prose-headings:text-emerald-50 prose-a:text-emerald-400">
            <slot />
        </article>
      </main>

    </div>
  </div>
</section>