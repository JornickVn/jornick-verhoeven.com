---
export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    repo?: string;
    tech?: string[];
    date?: string;
    image?: string;
    [key: string]: any;
  };
}

const { frontmatter } = Astro.props;
---

<section class="py-24 px-4">
  <div class="max-w-6xl mx-auto">
    
    <div class="mb-20 border-b border-emerald-500/40 pb-12">
      <a href="/portfolio" class="group inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300 mb-8 transition-colors">
        <span class="group-hover:-translate-x-1 transition-transform duration-200">&larr;</span> 
        Back to Portfolio
      </a>
      
      <h1 class="text-5xl md:text-7xl font-extrabold text-white mb-8 tracking-tight leading-none">
        {frontmatter.title}
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed font-light mb-12 max-w-4xl">
        {frontmatter.description}
      </p>

      <div class="flex flex-col lg:flex-row lg:items-start gap-12">
        
        <div class="flex-1 min-w-0">
          {frontmatter.image && (
            <div class="relative group">
              <div class="absolute -inset-1 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-2xl opacity-10 group-hover:opacity-30 blur transition duration-500"></div>
              <img 
                src={frontmatter.image} 
                alt={`Screenshot of ${frontmatter.title}`} 
                class="relative w-full rounded-xl shadow-2xl border border-gray-800 bg-gray-900 object-cover object-top max-h-[500px]"
              />
            </div>
          )}
        </div>

        <div class="lg:w-72 flex-none flex flex-col gap-8 text-sm">
           
           {frontmatter.date && (
            <div>
              <span class="block text-emerald-500 font-bold uppercase tracking-wider text-xs mb-2">Date</span>
              <span class="text-white text-lg font-medium border-l-2 border-emerald-500/30 pl-3 block">
                {new Date(frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}
              </span>
            </div>
           )}
           
           {frontmatter.tech && (
            <div>
              <span class="block text-emerald-500 font-bold uppercase tracking-wider text-xs mb-3">Technologies</span>
              <div class="flex flex-wrap gap-2">
                {frontmatter.tech.map((t) => (
                    <span class="text-gray-300 bg-gray-900/80 px-3 py-1.5 rounded-md border border-gray-800 text-sm font-medium hover:border-emerald-500/50 transition-colors cursor-default">
                      {t}
                    </span>
                ))}
              </div>
            </div>
           )}

           {frontmatter.repo && (
            <div>
              <span class="block text-emerald-500 font-bold uppercase tracking-wider text-xs mb-2">Links</span>
              <a href={frontmatter.repo} target="_blank" rel="noopener noreferrer" class="group flex items-center gap-3 text-white hover:text-emerald-400 transition-colors p-3 rounded-lg border border-gray-800 hover:border-emerald-500/30 bg-gray-900/30">
                <div class="bg-gray-800 p-1.5 rounded-md group-hover:bg-emerald-900/50 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                </div>
                <span class="font-medium">View Repository</span>
              </a>
            </div>
           )}
        </div>

      </div>
    </div>

    <article class="prose prose-xl prose-invert prose-emerald max-w-none 
      prose-headings:font-bold prose-headings:text-white prose-headings:tracking-tight
      prose-p:text-gray-300 prose-p:leading-relaxed prose-p:font-light
      prose-strong:text-white prose-strong:font-bold
      prose-img:rounded-2xl prose-img:shadow-2xl prose-img:border prose-img:border-gray-800 prose-img:my-16">
      
      <slot />

    </article>

  </div>
</section>