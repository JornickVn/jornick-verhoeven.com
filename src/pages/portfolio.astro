---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';

const modules = Object.values(import.meta.glob('../content/projects/*.md', { eager: true }));
const projects = modules.map((m) => ({ ...(m.frontmatter || m.meta || {}), Content: m.default }));
---

<Layout>
  <Navbar />
  <section id="portfolio" class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-2 text-emerald-400">Portfolio</h1>
        <p class="text-gray-300 max-w-2xl">A selection of projects and experiments.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {projects.map((p) => (
          <a class="card group" href={`/projects/${p.slug}`}>
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-white group-hover:text-emerald-400 transition-colors">{p.title}</h3>
            </div>
            <p class="text-gray-300 text-sm mb-4">{p.description}</p>
            <div class="flex gap-2 flex-wrap">
              {(p.tech || []).map((t) => (
                <span class="px-3 py-1 bg-emerald-900/40 border border-emerald-500/30 rounded-full text-xs text-emerald-300">{t}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

