---
const { bodyClass = '' } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Jornick-Home</title>

	</head>
	<body class={"bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-950 text-white" + (bodyClass ? ` ${bodyClass}` : '')}>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
