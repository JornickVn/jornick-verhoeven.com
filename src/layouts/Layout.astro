---
const { bodyClass = '' } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/me.png" />
        <link rel="icon" href="/me.png" />
        <meta name="generator" content={Astro.generator} />
        <title>Jornick Verhoeven</title>

        <meta name="description" content="Portfolio of Jornick Verhoeven, a Full Stack Developer specializing in .NET, Java, and modern web technologies." />

        <meta name="robots" content="index, follow" />
    </head>
    <body class={"min-h-screen bg-fixed bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-950 text-white" + (bodyClass ? ` ${bodyClass}` : '')}>
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
    }
</style>